{
	"env": {
		"browser": true,
		"es2021": true,
		"jest":true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"settings":{
		"react":{
			"version":"detect"
		}
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"react/prop-types": "off",
		"react/react-in-jsx-scope": "off",
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"never"
		]
	}
}
